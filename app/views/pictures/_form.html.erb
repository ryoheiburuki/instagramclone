<%= form_with model: @picture, local: true, url: confirm_pictures_path do |form| %>
  <% if @picture.errors.any? %>
    <div id="error_explanation">
      <h2><%= @picture.errors.count %>件のエラーがあります。</h2>
      <ul>
        <% @picture.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <table>
    <tr class="field">
      <th><%= form.label "画像" %></th>
      <td class = 'image-form'>
        <%= form.file_field :image_url %>
        <%= form.hidden_field :image_url_cache %>
      </td>
    </tr>

    <tr>
      <th><%= form.label "文章" %></th>
      <td><%= form.text_area :sentence, class: 'sentence-area', placeholder: :"文章" %></td>
    </tr>
  </table>
  <div class="actions">
    <%= form.submit "送信", class: "btn btn-info" %>
  </div>
<% end %>
