<%= image_tag @picture.image_url %>

<%= @picture.sentence %>

<% unless @picture.user_id == current_user.id %>
  <% if @favorite.present? %>
    <%= link_to "いいねを取り消す", favorite_path(id: @favorite.id), method: :delete %>
  <% else %>
    <%= link_to "いいね", favorites_path(picture_id: @picture.id), method: :post %>
  <% end %>
<% end %>
