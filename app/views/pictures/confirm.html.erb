<h1>確認画面</h1>

<%= form_with model: @picture, local: true do |form| %>

  <%= form.hidden_field :image_url_cache %>
  <%= form.hidden_field :sentence %>

  <%= image_tag @picture.image_url %>

  <div class = 'confirm-sentence-wrapper'>
    <p class = 'confirm-sentence'><%= @picture.sentence %></p>
  </div>

  <div class="actions">
    <%= form.submit "送信", class: "btn btn-info" %>
  </div>
<% end %>

<%= form_with(model: @picture, url: new_picture_path, local: true, method: 'get') do |form| %>
  <%= form.hidden_field :image_url %>
  <%= form.hidden_field :sentence %>
  <%= form.submit "戻る", name: "back", class: "btn btn-warning" %>
<% end %>
