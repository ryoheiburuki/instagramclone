<h1>ログイン</h1>

<%= form_with(scope: :session, url: sessions_path, local: true) do |f| %>
  <table>
    <tr>
      <th><%= f.label "メールアドレス" %></th>
      <td><%= f.email_field :email, class: "text-area", placeholder: "@mail.mail" %></td>
    </tr>
    <tr>
      <th><%= f.label "パスワード" %></th>
      <td><%= f.password_field :password, class: "text-area" %></td>
    </tr>
  </table>
    <%= f.submit "ログイン", class: "btn btn-info"  %>
<% end %>
